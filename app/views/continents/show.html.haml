- content_for :seo_meta do
  = @continent.seo_meta
  
.row
  .span12
    .push-20
    %h2= @continent.name
    %p= raw @continent.description
    .f16
      - @continent.countries.each do |country|
        %h5
          = link_to country.name, [@continent, country], { class: "flag #{country.code}"}
          - country.regions.each do |region|
            %small= link_to region.name, [@continent, country, region]
