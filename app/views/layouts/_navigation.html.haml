    .navbar-inner
      .container
        %a.btn.btn-navbar(data-target=".nav-collapse-cog" data-toggle="collapse")
          %span.icon-cog
        %a.btn.btn-navbar(data-target=".nav-collapse-menu" data-toggle="collapse")
          %span.icon-th-list
        %a.brand{ href: '/' }
          .bg-logo
            .logo
        .nav-collapse.nav-collapse-menu
          %ul.nav
            %li{class: request.path == tours_path && 'active'}= link_to t('tours.title'), tours_path
            /%li{class: request.path == '/hot_tours' && 'active'}= link_to "Гарячі пропозиції", "/hot_tours"
            %li.dropdown{class: request.path.include?('countries') && 'active'}
              %a.dropdown-toggle(data-toggle="dropdown" href="#")
                = t 'menu.countries_of_world'
                %b.caret
              %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                - Continent.includes(:countries).all.sort_by(&:slug).each do |continent|
                  - if continent.countries.any?
                    %li.dropdown-submenu
                      = link_to continent.name, continent
                      %ul.dropdown-menu.f16{"aria-labelledby" => "dLabel", :role => "menu"}
                        - continent.countries.sort_by(&:slug).each do |country|
                          %li= link_to country.name, [continent, country]
                  - else
                    %li= link_to continent.name, continent
            %li{class: request.path == visas_path && 'active'}= link_to t('menu.visas'), visas_path
            /%li{class: request.path == '/news' && 'active'}= link_to "Туристичний блог", "/news"
            %li{class: request.path == contacts_path && 'active'}= link_to "Контакти", contacts_path
        .nav-collapse.nav-collapse-cog
          %ul.nav.pull-right
            %li{class: locale == :uk && 'active'}= link_to "Укр", "?locale=uk"
            %li{class: locale == :ru && 'active'}= link_to "Рус", "?locale=ru"