- content_for :seo_meta do
  = @region.seo_meta

.row
  .span12
    .push-20
    %h2
      = @region.name
      %small= link_to @region.country.name, @region.country
    %p= raw @region.description
    - unless @region.recomendation.empty?
      %h4= t 'country.about.recomendation'
      %p= raw @region.recomendation
    - unless @region.infrastructure.empty?
      %h4= t 'country.about.infrastructure'
      %p= raw @region.infrastructure
    - if @region.gallery && @region.gallery.photos.any?
      %h4= t 'region.gallery' 
      %ul.grid
        - @region.gallery.photos.each do |photo|
          %li
            = link_to image_tag(photo.asset.url(:thumb_250x), { alt: photo.title }), photo.asset.url(:original), { class: :thumbnail }
