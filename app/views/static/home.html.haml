.row.country
  .col-lg-4.col-sm-12
    %h4= t 'home.last_tours'
    .list-group
      - @tours.each_with_index do |tour, i|
        .list-group-item
          - if tour.photo
            = image_tag(tour.photo.asset(:thumb_370), { alt: tour.photo.title, class: 'pull-left' })
          %h5.list-group-item-heading
            = link_to tour.title, tour
            %em= raw tour_subtitle(tour.tour_programs, true)
          %p.list-group-item-text= raw "#{t('gen.from')} <b>#{tour.price_from}#{tour.currency_sym}</b> на #{tour.durations.map(&:count_of_night).join(',')} ночей"
          %p.list-group-item-text= "#{tour.tour_types.map(&:title).join(', ')}"
          .clearfix
      .list-group-item
        %h4.list-group-item-heading
          %a{ href: tours_path } 
            = t 'home.all_tours'
            %span.glyphicon.glyphicon-arrow-right
  .col-lg-4.col-sm-6
    %h4= t 'home.popular_countries'
    .list-group
      - @countries.each_with_index do |country, i|
        .list-group-item
          - if country.photo
            = image_tag(country.photo.asset(:thumb_370), { alt: country.photo.title, class: 'pull-left' })
          %h5.list-group-item-heading
            = link_to country.name, country
            - country.continents.each_with_index do |continent, i|
              %small
                %em
                  = ', ' if i != 0
                  = link_to continent.name, continent
          %p.list-group-item-text= t 'home.region.tours', count: country.regions.includes(&:tour_programs).map{ |i| i.tour_programs.map(&:tour_id) }.flatten.uniq.count
          %p.list-group-item-text= t 'home.region.regions', count: country.regions.count
          .clearfix
      .list-group-item
        %h4.list-group-item-heading
          %a{ href: countries_path } 
            = t 'home.all_countries'
            %span.glyphicon.glyphicon-arrow-right
  .col-lg-4.col-sm-6
    %h4= t 'home.popular_regions'
    .list-group
      - @regions.each_with_index do |region, i|
        .list-group-item
          - if region.photo
            = image_tag(region.photo.asset(:thumb_370), { alt: region.photo.title, class: 'pull-left' })
          - elsif region.gallery && region.gallery.photos.any?
            = image_tag(region.gallery.photos.first.asset(:thumb_370), { alt: region.gallery.photos.first.title, class: 'pull-left'})
          %h5.list-group-item-heading
            = link_to region.name, [region.country, region]
            %small
              %em= link_to region.country.name, region.country
          %p.list-group-item-text= t 'home.region.tours', count: region.tour_programs.group_by(&:tour_id).count
          .clearfix
      .list-group-item
        %h4.list-group-item-heading
          %a{ href: regions_path } 
            = t 'home.all_regions'
            %span.glyphicon.glyphicon-arrow-right